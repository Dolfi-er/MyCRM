@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Production Management System</h1>
    <p>Welcome to the interactive production management system.</p>
</div>

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Materials</h5>
                <p class="card-text">Manage your materials inventory.</p>
                <a asp-controller="Materials" asp-action="Index" class="btn btn-primary">Go to Materials</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Products</h5>
                <p class="card-text">Manage your product catalog.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Go to Products</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Production Lines</h5>
                <p class="card-text">Monitor and control production lines.</p>
                <a asp-controller="ProductionLines" asp-action="Index" class="btn btn-primary">Go to Production Lines</a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Work Orders</h5>
                <p class="card-text">Manage production work orders.</p>
                <a asp-controller="WorkOrders" asp-action="Index" class="btn btn-primary">Go to Work Orders</a>
            </div>
        </div>
    </div>
</div>
