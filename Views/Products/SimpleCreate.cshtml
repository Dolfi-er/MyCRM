@model MyCRM.Models.Product

@{
    ViewData["Title"] = "Simple Create Product";
}

<h1>Create New Product (Simplified)</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Basic Product Information</h5>
            </div>
            <div class="card-body">
                <form asp-action="SimpleCreate" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Category" class="form-label">Category</label>
                        <input asp-for="Category" class="form-control" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ProductionTimePerUnit" class="form-label">Production Time (minutes per unit)</label>
                        <input asp-for="ProductionTimePerUnit" class="form-control" type="number" min="1" required />
                        <span asp-validation-for="ProductionTimePerUnit" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="MinimalStock" class="form-label">Minimal Stock</label>
                        <input asp-for="MinimalStock" class="form-control" type="number" min="0" />
                        <span asp-validation-for="MinimalStock" class="text-danger"></span>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Create Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
